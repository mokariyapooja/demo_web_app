<%= form_for(resource, :html => {:class => "register active"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <h3>Register</h3>
            <div class="column">
              <div>
                <label>Email:</label>
                <%= f.text_field :email %>
                <span class="error">This is an error</span>
              </div> 
              <div>
                <label>Password:</label>
                <%= f.password_field :password %>
                <span class="error">This is an error</span>
              </div>
              <div>
                <label>Password:</label>
                <%= f.password_field :password_confirmation %>
                <span class="error">This is an error</span>
              </div>

              <div>
                <label>photo:</label>
                <%= f.file_field :photo %>
                <span class="error">This is an error</span>
              </div>
              
            </div>
            <div class="bottom">
              <div class="remember">
                <%= f.check_box :remember_me %>
                <span>Remember Me</span>
              </div>

              <%= f.submit "Register" %>
               <%= link_to "You have an account already? Sign in here", new_user_session_path %>

              <!-- <a href="/users/sign_in" rel="login" class="linkform">You have an account already? Log in here</a>
               -->
              <div class="clear"></div>
            </div>
          <% end %>
