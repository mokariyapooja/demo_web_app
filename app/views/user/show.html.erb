<h1>user email : <%= @user.email %>  
  <div> <%= render 'user/follow_form'%></div>
  <div> <h1><%= link_to 'All albums', user_albums_path(@user) %></h1> </div>
  <% if current_user != @user%>
    <% if current_user.following?(@user) %>
      <%= link_to "Unfollow",user_unfollow_path(@user), method: :delete %>
    <% else  %>
      <%= link_to "Follow", user_follow_path(@user), method: :post %>
    <%end %>
  <%end %>
</h1>  
<h1><%= link_to 'Back', user_index_path %></h1>